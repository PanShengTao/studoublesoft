<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false" android:state_enabled="true">
        <shape>
            <solid android:color="@color/whiteColor" />

            <stroke android:width="0.5dp" android:color="@color/blackColor" android:dashGap="0dp" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_enabled="true">
        <shape>
            <solid android:color="@color/blueColor" />

            <corners android:radius="10dp" />
        </shape>
    </item>

</selector>