<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <!-- 页面主视图部分 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dip"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/DemoBtnAppend"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_blue_r4"
                android:text="追加视图"
                android:textColor="@color/selector_btn_white" >
            </Button>

            <Button
                android:id="@+id/DemoBtnDirection"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_red_r4"
                android:text="改变方向"
                android:textColor="@color/selector_btn_white" >
            </Button>

            <Button
                android:id="@+id/DemoBtnAlign"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_blue_r4"
                android:text="改变对齐"
                android:textColor="@color/selector_btn_white" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/DemoBtnRemove"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_blue_r4"
                android:text="移除视图"
                android:textColor="@color/selector_btn_white" >
            </Button>

            <Button
                android:id="@+id/DemoBtnUpdate"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_red_r4"
                android:text="更新文字"
                android:textColor="@color/selector_btn_white" >
            </Button>

            <Button
                android:id="@+id/DemoBtnReplace"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_blue_r4"
                android:text="替换视图"
                android:textColor="@color/selector_btn_white" >
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="230dip"
        android:orientation="vertical" >

        <include
            android:id="@+id/SegView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/public_segview" />
    </LinearLayout>

    <!-- NavigationBar -->

    <include layout="@layout/public_navigationbar" />

</RelativeLayout>