<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dip"
        android:background="@drawable/dialog_white_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="输入支付密码"
            android:textColor="#323232"
            android:textSize="20sp" />

        <doublesoft.android.stu.myview.PasswordInputView
            android:id="@+id/PayPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/password_input_border"
            android:hint="请输入支付密码"
            android:maxLength="6"
            android:textColor="@color/darkGrayColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/PayPasswordButton"
            android:layout_width="fill_parent"
            android:layout_height="54dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/selector_button_blue_shadow"
            android:paddingTop="4dip"
            android:paddingBottom="9dip"
            android:text="完成"
            android:textColor="@color/whiteColor"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <include
        layout="@layout/public_mynumkeyboard"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />


</RelativeLayout>