<doublesoft.android.stu.myview.DropHUD xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DropHUD"
    android:layout_width="fill_parent"
    android:layout_height="30dip"
    android:background="#000000"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/DropHUDIcon"
        android:layout_width="16dip"
        android:layout_height="16dip"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dip"
        android:contentDescription="@string/empty" />

    <TextView
        android:id="@+id/DropHUDTitle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="5dip"
        android:layout_toEndOf="@+id/DropHUDIcon"
        android:gravity="start|center_vertical"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</doublesoft.android.stu.myview.DropHUD>