<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="66dip"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/shape_white_r7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <EditText
            android:id="@+id/SearchEditText"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#00000000"
            android:imeOptions="actionSearch"
            android:inputType="none"
            android:labelFor="@id/SearchEditText"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/lightGrayColor"
            android:textSize="14sp"
            android:visibility="gone"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/SearchTextView"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:id="@+id/CellIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/empty"
                android:src="@drawable/icon_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dip"
                android:layout_toEndOf="@id/CellIcon"
                android:text="搜索"
                android:textColor="@color/darkGrayColor"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>